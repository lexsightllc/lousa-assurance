{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RiskNote",
  "type": "object",
  "required": ["title", "evidence"],
  "properties": {
    "id": {"type": "integer"},
    "title": {"type": "string"},
    "severity": {"type": "integer", "minimum": 1, "maximum": 5},
    "probability": {"type": "integer", "minimum": 1, "maximum": 5},
    "reversibility": {"type": "integer", "minimum": 1, "maximum": 5},
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "date"],
        "properties": {
          "id": {"type": "string"},
          "date": {"type": "string", "format": "date"}
        }
      }
    }
  }
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LousaAssuranceCase",
  "type": "object",
  "required": ["version", "system", "belief_model", "claims"],
  "properties": {
    "version": { "type": "string" },
    "system": {
      "type": "object",
      "required": ["name", "revision"],
      "properties": {
        "name": {"type": "string"},
        "revision": {"type": "string"}
      }
    },
    "belief_model": {
      "type": "object",
      "required": ["logic", "agents", "worlds", "edges"],
      "properties": {
        "logic": {"type": "string", "enum": ["K","KD","S5"]},
        "agents": {"type": "array", "items": {"type": "string"}},
        "worlds": {
          "type": "array",
          "items": {"type": "object", "required": ["id","facts"],
            "properties": {
              "id":{"type":"string"},
              "facts":{"type":"array","items":{"type":"string"}}
            }
          }
        },
        "edges": {
          "type":"array",
          "items":{"type":"object","required":["agent","frm","to"],
            "properties":{
              "agent":{"type":"string"},
              "frm":{"type":"string"},
              "to":{"type":"string"}
            }}
        }
      }
    },
    "claims": {
      "type":"array",
      "items":{
        "type":"object",
        "required":["id","type","spec"],
        "properties":{
          "id":{"type":"string"},
          "type":{"type":"string","enum":["temporal","epistemic"]},
          "spec":{
            "type":"object",
            "properties":{
              "temporal":{"type":"object","properties":{
                "kind":{"type":"string","enum":["G_implies_F"]},
                "p":{"type":"string"},
                "q":{"type":"string"}
              }, "required":["kind","p","q"]},
              "epistemic":{"type":"object","properties":{
                "op":{"type":"string","enum":["B","BB"]},
                "agent":{"type":"string"},
                "prop":{"type":"string"},
                "nested":{"type":"object"}
              }, "required":["op","agent","prop"]}
            }
          },
          "evidence":{"type":"array","items":{"type":"object"}}
        }
      }
    }
  }
}

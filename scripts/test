set -euo pipefail

source "$(dirname "$0")/common.sh"

install_dev_dependencies
export PYTHONHASHSEED="${PYTHONHASHSEED:-0}"
"${PYTEST_BIN}" \
    --cov=src/lousa \
    --cov-branch \
    --cov-report=term-missing \
    --cov-report=xml \
    "$@"
